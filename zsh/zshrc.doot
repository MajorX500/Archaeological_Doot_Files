export ZSH="/home/miguel/.oh-my-zsh"

ZSH_THEME="pasok"

plugins=(git)

source $ZSH/oh-my-zsh.sh

if hash exa &>/dev/null
then
    alias ls='exa' 
    alias l='ls -lsnew'
    alias ll='ls -la'
    alias tree='exa -T'
    alias lsnew='exa -lsnew'

else
    alias ls='ls --color=auto'
fi

alias mirrors='reflector -l 200 -n 20 -p http --sort rate --save /etc/pacman.d/mirrorlist'
